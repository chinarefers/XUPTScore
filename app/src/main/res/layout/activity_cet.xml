<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFFFFF">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="47dp"
                android:background="@drawable/main_title_bar"
                android:orientation="horizontal">

            <!-- 菜单 -->

            <Button
                    android:id="@+id/butMenu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_menu"
                    android:gravity="center_vertical"
                    android:textColor="#FF8C00"
                    android:textSize="14sp"/>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/transparent"
                    android:gravity="center_vertical"
                    android:text="@string/query_cet"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>

            <Button
                    android:id="@+id/share"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/share"
                    android:gravity="center_vertical"
                    android:textColor="#FF8C00"
                    android:textSize="14sp"
                    android:visibility="invisible"/>
        </RelativeLayout>

        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/app_name"
                android:src="@drawable/cet"/>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp">

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:paddingBottom="3dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="10dp">

                    <TextView
                            android:layout_width="80dp"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:text="@string/candidate_number_title"
                            android:textColor="@color/black"
                            android:textSize="15sp"/>

                    <EditText
                            android:id="@+id/cet_account"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="@string/candidate_number_tips"
                            android:inputType="numberDecimal"
                            android:textColor="@color/black"
                            android:textSize="15sp">
                    </EditText>
                </LinearLayout>

                <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/expand_divider"/>
                <!-- 选项设置 -->

                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:paddingBottom="3dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="10dp">

                    <TextView
                            android:layout_width="80dp"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:text="@string/name_title"
                            android:textColor="@color/black"
                            android:textSize="15sp"/>
                    <!-- 修改密码 -->

                    <EditText
                            android:id="@+id/cet_name"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@null"
                            android:ems="2"
                            android:gravity="center_vertical"
                            android:hint="@string/name_tips"
                            android:maxEms="2"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray"
                            android:textSize="15sp">
                    </EditText>
                </LinearLayout>

                <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/expand_divider"/>

                <Button
                        android:id="@+id/butQuery"
                        android:layout_width="fill_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="29dp"
                        android:background="@drawable/btn_click"
                        android:gravity="center"
                        android:text="@string/query"
                        android:textColor="@color/white"
                        android:textSize="15sp"/>
            </LinearLayout>

            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="75dip">

                <Button
                        android:id="@+id/butForgetCet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:background="#00000000"
                        android:gravity="left|center_vertical"
                        android:text="@string/query_ask"
                        android:textColor="#7EC0EE"
                        android:textSize="7.5pt"
                        android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>